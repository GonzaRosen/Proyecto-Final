            android:fontFamily="monospace"
            android:textSize="18sp"
            android:layout_marginLeft="20dp"/>
        <View
            android:layout_width="320dp"
            android:layout_height="0.5dp"
            android:background="@color/Negro"
            android:layout_marginLeft="20dp"/>

        <TextView
            android:layout_width="wrap_content"
